{
  "compilerOptions": {
    /* File layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Language & runtime */
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],

    /* Node compatibility */
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* Output */
    "sourceMap": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
